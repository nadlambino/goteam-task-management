{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [ 
        "resources/**/*.ts",
        "resources/**/*.d.ts",
        "resources/**/*.vue"
    ],
    "compilerOptions": {
        "baseUrl": "./",
        "allowJs": false,
        "strict": true,
        "paths": {
            "@/*": ["resources/js/*"]
        }
    },
    "types": ["vite/client"], 
}